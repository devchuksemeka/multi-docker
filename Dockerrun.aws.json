{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"devchuksemeka/multi-client",
            "hostname":"client",
            "essential":false,
            "memory":128
        },
        {
            "name":"worker",
            "image":"devchuksemeka/multi-worker",
            "hostname":"worker",
            "essential":false,
            "memory":128
        },
        {
            "name":"server",
            "image":"devchuksemeka/multi-server",
            "hostname":"api",
            "essential":false,
            "memory":128
        },
        {
            "name":"nginx",
            "image":"devchuksemeka/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client","server"],
            "memory":1028,
            "mountPoints": [
                {
                  "containerPath": "/etc/nginx/conf.d",
                  "readOnly": false
                }
              ]
        }
    ]
}